{
  "extends": ["react-app", "react-app/jest"],
  "plugins": ["perfectionist"],
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["./", "../"],
            "message": "Relative imports are not allowed."
          }
        ]
      }
    ]
  }
}
