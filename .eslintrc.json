{
  "extends": [
    "react-app",
    "react-app/jest",
    "plugin:perfectionist/recommended-alphabetical-legacy"
  ],
  "plugins": ["perfectionist"],
  "rules": {
    "perfectionist/sort-imports": [
      "error",
      {
        "ignoreCase": false,
        "internalPattern": ["^src"],
        "type": "alphabetical"
      }
    ],
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["./", "../"],
            "message": "Relative imports are not allowed."
          }
        ]
      }
    ]
  }
}
